@model Escale.Web.Models.CustomerViewModel
@{
    ViewData["Title"] = "Customers";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 page-header">
    <div>
        <h1 class="h2"><i class="fas fa-user-friends me-2"></i>Customers Management</h1>
        <p class="text-muted mb-0">Manage your customers, vehicles, and subscriptions.</p>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#customerModal" onclick="openCustomerModal()">
            <i class="fas fa-user-plus me-2"></i>Add New Customer
        </button>
    </div>
</div>

@await Html.PartialAsync("_ApiError")

<!-- Search -->
<div class="card shadow mb-3">
    <div class="card-body py-2">
        <form method="get" asp-action="Index" class="row g-2 align-items-center">
            <div class="col-md-4">
                <div class="input-group">
                    <input type="text" class="form-control" name="search" value="@Model.SearchTerm" placeholder="Search customers..." />
                    <button class="btn btn-outline-primary" type="submit"><i class="fas fa-search"></i></button>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.SearchTerm))
            {
                <div class="col-auto">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm"><i class="fas fa-times me-1"></i>Clear</a>
                </div>
            }
            <div class="col-auto ms-auto">
                <span class="text-muted small">Showing @Model.Customers.Count of @Model.TotalCount customers</span>
            </div>
        </form>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table id="customersTable" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Type</th>
                        <th>Cars</th>
                        <th>Subscriptions</th>
                        <th>Credit</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model.Customers)
                    {
                        <tr>
                            <td>
                                <strong>@customer.Name</strong>
                                @if (customer.Type == "Corporate" && !string.IsNullOrEmpty(customer.TIN))
                                {
                                    <br /><small class="text-muted">TIN: @customer.TIN</small>
                                }
                            </td>
                            <td>@customer.Email</td>
                            <td>@customer.PhoneNumber</td>
                            <td>
                                <span class="badge @(customer.Type == "Corporate" ? "bg-primary" : "bg-info")">
                                    @customer.Type
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@customer.Cars.Count</span>
                            </td>
                            <td>
                                <span class="badge bg-success">@customer.Subscriptions.Count(s => s.Status == "Active")</span>
                            </td>
                            <td>
                                <span class="@(customer.CurrentCredit > 0 ? "text-danger fw-bold" : "text-muted")">
                                    @customer.CurrentCredit.ToString("N0") / @customer.CreditLimit.ToString("N0")
                                </span>
                            </td>
                            <td>
                                <span class="badge @(customer.IsActive ? "bg-success" : "bg-secondary")">
                                    @(customer.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>@customer.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td>
                                <a asp-controller="Customers" asp-action="Details" asp-route-id="@customer.Id" class="btn btn-sm btn-info" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <button class="btn btn-sm btn-primary" onclick="editCustomer('@customer.Id')" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" onclick="deleteCustomer('@customer.Id')" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Customer pagination" class="mt-3">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page - 1)" asp-route-search="@Model.SearchTerm">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.Page ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@Model.SearchTerm">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page + 1)" asp-route-search="@Model.SearchTerm">Next</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

<!-- Customer Modal -->
<div class="modal fade" id="customerModal" tabindex="-1" aria-labelledby="customerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="customerModalLabel">Add/Edit Customer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="customerForm" asp-controller="Customers" asp-action="Create" method="post">
                <div class="modal-body">
                    <input type="hidden" id="customerId" name="Id" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="customerName" class="form-label">Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="customerName" name="Name" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="customerType" class="form-label">Type <span class="text-danger">*</span></label>
                            <select class="form-select" id="customerType" name="Type" required onchange="toggleCorporateFields()">
                                @foreach (var type in Model.CustomerTypes)
                                {
                                    <option value="@type">@type</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="Email" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="phoneNumber" class="form-label">Phone <span class="text-danger">*</span></label>
                            <input type="tel" class="form-control" id="phoneNumber" name="PhoneNumber" placeholder="+250788000000" required />
                        </div>
                    </div>

                    <div id="corporateFields" style="display: none;">
                        <div class="mb-3">
                            <label for="tin" class="form-label">TIN</label>
                            <input type="text" class="form-control" id="tin" name="TIN" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="creditLimit" class="form-label">Credit Limit (RWF)</label>
                            <input type="number" class="form-control" id="creditLimit" name="CreditLimit" value="0" min="0" step="1000" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-check mt-4">
                                <input class="form-check-input" type="checkbox" id="isActive" name="IsActive" checked />
                                <label class="form-check-label" for="isActive">
                                    Active
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Customer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function() {
        $('#customersTable').DataTable({
            pageLength: 10,
            order: [[8, 'desc']],
            paging: false,
            info: false
        });
    });

    function openCustomerModal() {
        $('#customerForm').attr('action', '@Url.Action("Create", "Customers")');
        $('#customerModalLabel').text('Add New Customer');
        $('#customerForm')[0].reset();
        $('#customerId').val('');
        $('#corporateFields').hide();
        $('#isActive').prop('checked', true);
    }

    function editCustomer(id) {
        $('#customerForm').attr('action', '@Url.Action("Edit", "Customers")');
        $('#customerModalLabel').text('Edit Customer');
        $('#customerId').val(id);

        // Load customer data from table row
        var row = $('button[onclick="editCustomer(\'' + id + '\')"]').closest('tr');
        var name = row.find('td:eq(0) strong').text();
        var email = row.find('td:eq(1)').text().trim();
        var phone = row.find('td:eq(2)').text().trim();
        var type = row.find('td:eq(3) .badge').text().trim();

        $('#customerName').val(name);
        $('#email').val(email);
        $('#phoneNumber').val(phone);
        $('#customerType').val(type);
        toggleCorporateFields();

        var isActive = row.find('td:eq(7) .badge').text().trim() === 'Active';
        $('#isActive').prop('checked', isActive);

        $('#customerModal').modal('show');
    }

    function deleteCustomer(id) {
        if (confirm('Are you sure you want to delete this customer?')) {
            $.post('@Url.Action("Delete", "Customers")', { id: id }, function() {
                location.reload();
            });
        }
    }

    function toggleCorporateFields() {
        var customerType = $('#customerType').val();
        if (customerType === 'Corporate') {
            $('#corporateFields').show();
        } else {
            $('#corporateFields').hide();
        }
    }
</script>
}
