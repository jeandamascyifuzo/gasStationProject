@model List<Escale.Web.Models.FuelType>
@{
    ViewData["Title"] = "Fuel Types";
    var userRole = Context.Session.GetString("UserRole");
    var isAdmin = userRole == "Admin";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 page-header">
    <div>
        <h1 class="h2"><i class="fas fa-oil-can me-2"></i>Fuel Types</h1>
        <p class="text-muted mb-0">Fuel types and pricing for your organization.</p>
    </div>
    @if (isAdmin)
    {
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addFuelTypeModal">
            <i class="fas fa-plus me-2"></i>Add Fuel Type
        </button>
    }
</div>

@await Html.PartialAsync("_ApiError")

<div class="card shadow mb-4">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-table me-2"></i>All Fuel Types</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="fuelTypesTable" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Fuel Name</th>
                        <th>Price/L (RWF)</th>
                        <th>Status</th>
                        @if (isAdmin)
                        {
                            <th class="text-center" style="width: 150px;">Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var fuel in Model)
                    {
                        <tr>
                            <td>@fuel.Name</td>
                            <td>@fuel.PricePerLiter.ToString("N0")</td>
                            <td>
                                <span class="badge @(fuel.IsActive ? "bg-success" : "bg-secondary")">
                                    @(fuel.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            @if (isAdmin)
                            {
                                <td class="text-center">
                                    <button type="button" class="btn btn-sm btn-outline-primary me-1"
                                            data-bs-toggle="modal" data-bs-target="#editFuelTypeModal"
                                            onclick="populateEdit('@fuel.Id', '@fuel.Name', '@fuel.PricePerLiter', @(fuel.IsActive ? "true" : "false"))">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <form asp-action="Delete" method="post" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this fuel type?');">
                                        <input type="hidden" name="id" value="@fuel.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (isAdmin)
{
    <!-- Add Fuel Type Modal -->
    <div class="modal fade" id="addFuelTypeModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Fuel Type</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form asp-action="Create" method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="ftName" class="form-label">Fuel Type Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="ftName" name="name" placeholder="e.g. Petrol 95, Diesel" required />
                        </div>
                        <div class="mb-3">
                            <label for="ftPrice" class="form-label">Price per Liter (RWF) <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="ftPrice" name="pricePerLiter" step="1" min="0" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Add Fuel Type
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Fuel Type Modal -->
    <div class="modal fade" id="editFuelTypeModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Fuel Type</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form asp-action="Edit" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="id" id="editId" />
                        <div class="mb-3">
                            <label for="editName" class="form-label">Fuel Type Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="editName" name="name" required />
                        </div>
                        <div class="mb-3">
                            <label for="editPrice" class="form-label">Price per Liter (RWF) <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="editPrice" name="pricePerLiter" step="1" min="0" required />
                        </div>
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="editActive" name="isActive" value="true" />
                                <label class="form-check-label" for="editActive">Active</label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
<script>
    $(document).ready(function() {
        $('#fuelTypesTable').DataTable({
            pageLength: 10,
            order: [[0, 'asc']]
        });
    });

    function populateEdit(id, name, price, isActive) {
        document.getElementById('editId').value = id;
        document.getElementById('editName').value = name;
        document.getElementById('editPrice').value = price;
        document.getElementById('editActive').checked = isActive;
    }
</script>
}
