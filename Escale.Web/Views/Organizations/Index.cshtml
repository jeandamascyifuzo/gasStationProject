@model Escale.Web.Models.OrganizationViewModel
@{
    ViewData["Title"] = "Organizations";
}

@await Html.PartialAsync("_ApiError")

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 page-header">
    <div>
        <h1 class="h2"><i class="fas fa-building me-2"></i>Organizations</h1>
        <p class="text-muted mb-0">Manage all organizations in the system.</p>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#orgModal" onclick="openOrgModal()">
            <i class="fas fa-plus me-2"></i>Add Organization
        </button>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h3 class="text-primary">@Model.Organizations.Count</h3>
                <small class="text-muted">Total Organizations</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h3 class="text-success">@Model.Organizations.Count(o => o.IsActive)</h3>
                <small class="text-muted">Active</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h3 class="text-info">@Model.Organizations.Sum(o => o.StationCount)</h3>
                <small class="text-muted">Total Stations</small>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table id="orgsTable" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>TIN</th>
                        <th>Address</th>
                        <th>Stations</th>
                        <th>Users</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var org in Model.Organizations)
                    {
                        <tr>
                            <td>
                                <strong>@org.Name</strong>
                                <br /><small class="text-muted">@org.Slug</small>
                            </td>
                            <td>@org.TIN</td>
                            <td>@org.Address</td>
                            <td><span class="badge bg-info">@org.StationCount</span></td>
                            <td><span class="badge bg-secondary">@org.UserCount</span></td>
                            <td>
                                <span class="badge @(org.IsActive ? "bg-success" : "bg-danger")">
                                    @org.Status
                                </span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@org.Id" class="btn btn-sm btn-info" title="Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <button class="btn btn-sm btn-primary" onclick="editOrg('@org.Id', '@org.Name', '@org.TIN', '@org.Address', '@org.Phone', '@org.Email', @org.IsActive.ToString().ToLower())" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" onclick="deleteOrg('@org.Id')" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Organization Modal -->
<div class="modal fade" id="orgModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orgModalLabel">Add Organization</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="orgForm" asp-controller="Organizations" asp-action="Create" method="post">
                <div class="modal-body">
                    <input type="hidden" id="orgId" name="id" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="orgName" class="form-label">Organization Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="orgName" name="name" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="orgTin" class="form-label">TIN</label>
                            <input type="text" class="form-control" id="orgTin" name="tin" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="orgAddress" class="form-label">Address</label>
                        <input type="text" class="form-control" id="orgAddress" name="address" />
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="orgPhone" class="form-label">Phone</label>
                            <input type="tel" class="form-control" id="orgPhone" name="phone" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="orgEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="orgEmail" name="email" />
                        </div>
                    </div>
                    <div class="mb-3" id="isActiveGroup" style="display:none;">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="orgIsActive" name="isActive" value="true" checked />
                            <label class="form-check-label" for="orgIsActive">Active</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function () {
        $('#orgsTable').DataTable({
            pageLength: 10,
            order: [[0, 'asc']]
        });
    });

    function openOrgModal() {
        $('#orgForm').attr('action', '@Url.Action("Create", "Organizations")');
        $('#orgModalLabel').text('Add Organization');
        $('#orgForm')[0].reset();
        $('#orgId').val('');
        $('#isActiveGroup').hide();
    }

    function editOrg(id, name, tin, address, phone, email, isActive) {
        $('#orgForm').attr('action', '@Url.Action("Edit", "Organizations")');
        $('#orgModalLabel').text('Edit Organization');
        $('#orgId').val(id);
        $('#orgName').val(name);
        $('#orgTin').val(tin);
        $('#orgAddress').val(address);
        $('#orgPhone').val(phone);
        $('#orgEmail').val(email);
        $('#orgIsActive').prop('checked', isActive);
        $('#isActiveGroup').show();
        $('#orgModal').modal('show');
    }

    function deleteOrg(id) {
        if (confirm('Are you sure you want to delete this organization? This will soft-delete all associated data.')) {
            $.post('@Url.Action("Delete", "Organizations")', { id: id }, function () {
                location.reload();
            });
        }
    }
</script>
}
