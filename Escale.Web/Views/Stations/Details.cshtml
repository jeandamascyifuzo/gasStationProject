@model Escale.Web.Models.StationDetailsViewModel
@{
    ViewData["Title"] = "Station Details";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 page-header">
    <div>
        <h1 class="h2"><i class="fas fa-gas-pump me-2"></i>@Model.Station.Name</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Stations" asp-action="Index">Stations</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Station.Name</li>
            </ol>
        </nav>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <button type="button" class="btn btn-primary me-2" onclick="editStation(@Model.Station.Id)">
            <i class="fas fa-edit me-2"></i>Edit Station
        </button>
        <a asp-controller="Stations" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-2">
        <div class="card bg-primary text-white shadow stats-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-xs mb-1">TODAY'S SALES</div>
                        <div class="h6 mb-0 fw-bold">@Model.Stats.TodaysSales.ToString("N0") RWF</div>
                    </div>
                    <div class="icon-wrapper">
                        <i class="fas fa-dollar-sign fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-success text-white shadow stats-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-xs mb-1">TRANSACTIONS</div>
                        <div class="h6 mb-0 fw-bold">@Model.Stats.TodaysTransactions</div>
                    </div>
                    <div class="icon-wrapper">
                        <i class="fas fa-receipt fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-info text-white shadow stats-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-xs mb-1">EMPLOYEES</div>
                        <div class="h6 mb-0 fw-bold">@Model.Stats.TotalEmployees</div>
                    </div>
                    <div class="icon-wrapper">
                        <i class="fas fa-users fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark shadow stats-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-xs mb-1">ACTIVE PUMPS</div>
                        <div class="h6 mb-0 fw-bold">@Model.Stats.ActivePumps</div>
                    </div>
                    <div class="icon-wrapper">
                        <i class="fas fa-fill-drip fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white shadow stats-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-xs mb-1">LOW STOCK ITEMS</div>
                        <div class="h6 mb-0 fw-bold">@Model.Stats.LowStockItems</div>
                    </div>
                    <div class="icon-wrapper">
                        <i class="fas fa-exclamation-triangle fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tabs -->
<div class="card shadow">
    <div class="card-header" style="background: white; border-bottom: 2px solid var(--border-color);">
        <ul class="nav nav-tabs card-header-tabs border-0" id="stationTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="details-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab">
                    <i class="fas fa-info-circle me-2"></i>Details
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="sales-tab" data-bs-toggle="tab" data-bs-target="#sales" type="button" role="tab">
                    <i class="fas fa-chart-line me-2"></i>Sales
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="stock-tab" data-bs-toggle="tab" data-bs-target="#stock" type="button" role="tab">
                    <i class="fas fa-boxes me-2"></i>Stock <span class="badge bg-danger">@Model.Stats.LowStockItems</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="employees-tab" data-bs-toggle="tab" data-bs-target="#employees" type="button" role="tab">
                    <i class="fas fa-users me-2"></i>Employees <span class="badge bg-primary">@Model.Stats.TotalEmployees</span>
                </button>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content" id="stationTabsContent">
            <!-- Details Tab -->
            <div class="tab-pane fade show active" id="details" role="tabpanel">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="mb-3">Station Information</h5>
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th width="40%">Station Name:</th>
                                    <td>@Model.Station.Name</td>
                                </tr>
                                <tr>
                                    <th>Location:</th>
                                    <td>@Model.Station.Location</td>
                                </tr>
                                <tr>
                                    <th>Address:</th>
                                    <td>@Model.Station.Address</td>
                                </tr>
                                <tr>
                                    <th>Contact Number:</th>
                                    <td>@Model.Station.ContactNumber</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h5 class="mb-3">Operational Details</h5>
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th width="40%">Manager:</th>
                                    <td>@Model.Station.ManagerName</td>
                                </tr>
                                <tr>
                                    <th>Total Pumps:</th>
                                    <td>@Model.Station.PumpCount</td>
                                </tr>
                                <tr>
                                    <th>Status:</th>
                                    <td>
                                        <span class="badge @(Model.Station.Status == "Active" ? "bg-success" : "bg-secondary")">
                                            @Model.Station.Status
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Sales Tab -->
            <div class="tab-pane fade" id="sales" role="tabpanel">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5>Sales History</h5>
                    <div>
                        <button type="button" class="btn btn-primary btn-sm">
                            <i class="fas fa-download me-2"></i>Export
                        </button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Fuel Type</th>
                                <th>Quantity (L)</th>
                                <th>Total Sales (RWF)</th>
                                <th>Transactions</th>
                                <th>Avg. per Transaction</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sale in Model.Sales)
                            {
                                <tr>
                                    <td>@sale.Date.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <span class="badge @(sale.FuelType == "Petrol" ? "bg-success" : sale.FuelType == "Diesel" ? "bg-primary" : "bg-warning")">
                                            @sale.FuelType
                                        </span>
                                    </td>
                                    <td>@sale.Quantity.ToString("N2")</td>
                                    <td>@sale.TotalSales.ToString("N0")</td>
                                    <td>@sale.TransactionCount</td>
                                    <td>@((sale.TotalSales / sale.TransactionCount).ToString("N0"))</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-info">
                                <th colspan="2">Total</th>
                                <th>@Model.Sales.Sum(s => s.Quantity).ToString("N2")</th>
                                <th>@Model.Sales.Sum(s => s.TotalSales).ToString("N0")</th>
                                <th>@Model.Sales.Sum(s => s.TransactionCount)</th>
                                <th>-</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <!-- Stock Tab -->
            <div class="tab-pane fade" id="stock" role="tabpanel">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5>Fuel Stock Levels</h5>
                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#refillModal">
                        <i class="fas fa-plus me-2"></i>Record Refill
                    </button>
                </div>
                <div class="row">
                    @foreach (var stock in Model.Stock)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="card @(stock.IsLowStock ? "border-danger" : "")">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        @stock.FuelType
                                        @if (stock.IsLowStock)
                                        {
                                            <span class="badge bg-danger">Low Stock</span>
                                        }
                                    </h5>
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between mb-1">
                                            <small>Current Level</small>
                                            <small><strong>@stock.CurrentLevel.ToString("N0")L / @stock.Capacity.ToString("N0")L</strong></small>
                                        </div>
                                        <div class="progress" style="height: 25px;">
                                            <div class="progress-bar @(stock.IsLowStock ? "bg-danger" : stock.PercentageFull > 70 ? "bg-success" : "bg-warning")" 
                                                 style="width: @stock.PercentageFull%">
                                                @stock.PercentageFull.ToString("F1")%
                                            </div>
                                        </div>
                                    </div>
                                    <table class="table table-sm table-borderless">
                                        <tr>
                                            <td>Reorder Level:</td>
                                            <td class="text-end"><strong>@stock.ReorderLevel.ToString("N0")L</strong></td>
                                        </tr>
                                        <tr>
                                            <td>Last Refill:</td>
                                            <td class="text-end">@stock.LastRefill.ToString("yyyy-MM-dd")</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Employees Tab -->
            <div class="tab-pane fade" id="employees" role="tabpanel">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5>Station Employees</h5>
                    <button type="button" class="btn btn-primary btn-sm">
                        <i class="fas fa-user-plus me-2"></i>Assign Employee
                    </button>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model.Employees)
                            {
                                <tr>
                                    <td><strong>@employee.Name</strong></td>
                                    <td>@employee.Email</td>
                                    <td>@employee.Phone</td>
                                    <td>
                                        <span class="badge @(employee.Role == "Manager" ? "bg-primary" : employee.Role == "Cashier" ? "bg-success" : "bg-secondary")">
                                            @employee.Role
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @(employee.IsActive ? "bg-success" : "bg-secondary")">
                                            @(employee.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-controller="Users" asp-action="Index" class="btn btn-sm btn-info" title="View Profile">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button class="btn btn-sm btn-danger" onclick="removeEmployee(@employee.Id)" title="Remove">
                                            <i class="fas fa-user-minus"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Refill Modal -->
<div class="modal fade" id="refillModal" tabindex="-1" aria-labelledby="refillModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="refillModalLabel">Record Fuel Refill</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="refillForm" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="fuelType" class="form-label">Fuel Type <span class="text-danger">*</span></label>
                        <select class="form-select" id="fuelType" name="FuelType" required>
                            <option value="">Select Fuel Type</option>
                            @foreach (var stock in Model.Stock)
                            {
                                <option value="@stock.FuelType">@stock.FuelType</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="quantity" class="form-label">Quantity (Liters) <span class="text-danger">*</span></label>
                        <input type="number" class="form-control" id="quantity" name="Quantity" required />
                    </div>

                    <div class="mb-3">
                        <label for="refillDate" class="form-label">Refill Date <span class="text-danger">*</span></label>
                        <input type="datetime-local" class="form-control" id="refillDate" name="RefillDate" required />
                    </div>

                    <div class="mb-3">
                        <label for="notes" class="form-label">Notes</label>
                        <textarea class="form-control" id="notes" name="Notes" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Record Refill
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

