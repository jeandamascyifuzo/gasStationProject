@model Escale.Web.Models.StationViewModel
@{
    ViewData["Title"] = "Stations";
    var isSuperAdmin = Context.Session.GetString("UserRole") == "SuperAdmin";
}

@await Html.PartialAsync("_ApiError")

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 page-header">
    <div>
        <h1 class="h2"><i class="fas fa-gas-pump me-2"></i>Stations</h1>
        <p class="text-muted mb-0">View your gas stations, locations, and operations.</p>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table id="stationsTable" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Manager</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var station in Model.Stations)
                    {
                        <tr>
                            <td>@station.Name</td>
                            <td>@station.Location</td>
                            <td>@(station.ManagerName ?? "Unassigned")</td>
                            <td>
                                <span class="badge @(station.IsActive ? "bg-success" : "bg-secondary")">
                                    @station.Status
                                </span>
                            </td>
                            <td>
                                <a asp-controller="Stations" asp-action="Details" asp-route-id="@station.Id" class="btn btn-sm btn-info" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function() {
        $('#stationsTable').DataTable({
            pageLength: 10,
            order: [[0, 'asc']]
        });
    });
</script>
}
