<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Escale.mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Escale.mobile.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="True"
    Shell.TabBarBackgroundColor="#FFFFFF"
    Shell.TabBarForegroundColor="#1E3A8A"
    Shell.TabBarUnselectedColor="#94A3B8"
    Shell.TabBarTitleColor="#1E293B"
    Shell.TabBarIsVisible="True"
    Title="Escale Cashier">

    <TabBar>
        <Tab Title="Dashboard"
             Icon="dashboard.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:DashboardPage}"
                Route="Dashboard"/>
        </Tab>

        <Tab Title="New Sale"
             Icon="sale.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:NewSalePage}"
                Route="NewSale"/>
        </Tab>

        <Tab Title="Stock"
             Icon="stock.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:StockPage}"
                Route="Stock"/>
        </Tab>

        <Tab Title="History"
             Icon="history.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:TransactionsPage}"
                Route="Transactions"/>
        </Tab>

        <Tab Title="Profile"
             Icon="profile.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:ProfilePage}"
                Route="Profile"/>
        </Tab>
    </TabBar>

</Shell>
