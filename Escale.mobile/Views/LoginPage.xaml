<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Escale.mobile.ViewModels"
             x:Class="Escale.mobile.Views.LoginPage"
             x:DataType="vm:LoginViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <!-- Logo -->
            <Border StrokeShape="RoundRectangle 60"
                    BackgroundColor="#1E3A8A"
                    HeightRequest="120"
                    WidthRequest="120"
                    HorizontalOptions="Center"
                    Margin="0,0,0,30">
                <Label Text="ESCALE"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>

            <Label Text="Escale Gas Station"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#1E3A8A"/>

            <Label Text="Cashier App"
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="#64748B"
                   Margin="0,0,0,30"/>

            <!-- Username -->
            <Border StrokeShape="RoundRectangle 10"
                    Stroke="#E2E8F0"
                    BackgroundColor="White"
                    Padding="15,10">
                <Entry Placeholder="Username"
                       Text="{Binding Username}"
                       FontSize="16"
                       TextColor="#1E293B"
                       ReturnType="Next"/>
            </Border>

            <!-- Password -->
            <Border StrokeShape="RoundRectangle 10"
                    Stroke="#E2E8F0"
                    BackgroundColor="White"
                    Padding="15,10">
                <Entry Placeholder="Password"
                       Text="{Binding Password}"
                       IsPassword="True"
                       FontSize="16"
                       TextColor="#1E293B"
                       ReturnType="Done"
                       ReturnCommand="{Binding LoginCommand}"/>
            </Border>

            <!-- Remember Me -->
            <HorizontalStackLayout Spacing="10">
                <CheckBox IsChecked="{Binding RememberMe}"/>
                <Label Text="Remember me"
                       VerticalOptions="Center"
                       TextColor="#64748B"/>
            </HorizontalStackLayout>

            <!-- Error Message -->
            <Border StrokeShape="RoundRectangle 8"
                    BackgroundColor="#FEF2F2"
                    Padding="12"
                    IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}">
                <Label Text="{Binding ErrorMessage}"
                       TextColor="#DC2626"
                       FontSize="14"/>
            </Border>

            <!-- Login Button - shows loading state -->
            <Grid HeightRequest="55" Margin="0,10,0,0">
                <!-- Normal Login Button -->
                <Button Text="Login"
                        Command="{Binding LoginCommand}"
                        BackgroundColor="#1E3A8A"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        HeightRequest="55"
                        CornerRadius="10"
                        IsVisible="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"/>

                <!-- Loading Button -->
                <Border StrokeShape="RoundRectangle 10"
                        BackgroundColor="#3B5998"
                        HeightRequest="55"
                        IsVisible="{Binding IsBusy}">
                    <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="12">
                        <ActivityIndicator IsRunning="True"
                                         Color="White"
                                         HeightRequest="22"
                                         WidthRequest="22"/>
                        <Label Text="Logging in..."
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
