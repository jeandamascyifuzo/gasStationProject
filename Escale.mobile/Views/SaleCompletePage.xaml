<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Escale.mobile.ViewModels"
             x:Class="Escale.mobile.Views.SaleCompletePage"
             x:DataType="vm:SaleCompleteViewModel"
             Title="Sale Complete"
             BackgroundColor="#F8F9FA"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Success Header -->
        <VerticalStackLayout Grid.Row="0" Padding="20,30,20,10" Spacing="8" BackgroundColor="#F8F9FA">
            <Border StrokeShape="RoundRectangle 40"
                    BackgroundColor="#DCFCE7"
                    HeightRequest="70"
                    WidthRequest="70"
                    HorizontalOptions="Center">
                <Label Text="&#x2714;"
                       FontSize="36"
                       TextColor="#10B981"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>
            <Label Text="SALE COMPLETED"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="#10B981"
                   HorizontalOptions="Center"/>
            <Label Text="{Binding Sale.ReceiptNumber, StringFormat='Receipt: {0}'}"
                   FontSize="13"
                   TextColor="#64748B"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <!-- EBM Receipt WebView (when EBM receipt URL is available) -->
        <Border Grid.Row="1"
                StrokeShape="RoundRectangle 12"
                Stroke="#E2E8F0"
                BackgroundColor="White"
                Margin="15,5,15,10"
                IsVisible="{Binding HasEBMReceipt}">
            <WebView x:Name="EbmReceiptWebView"
                     Source="{Binding EbmReceiptViewerUrl}"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"/>
        </Border>

        <!-- Fallback: Custom receipt card when no EBM receipt -->
        <ScrollView Grid.Row="1"
                    Margin="15,5,15,10"
                    IsVisible="{Binding HasEBMReceipt, Converter={StaticResource InvertedBoolConverter}}">
            <Border StrokeShape="RoundRectangle 15"
                    BackgroundColor="White"
                    Padding="25"
                    StrokeThickness="2"
                    Stroke="#F59E0B">
                <VerticalStackLayout Spacing="12">
                    <Label Text="SALE RECEIPT"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#1E3A8A"
                           HorizontalOptions="Center"/>

                    <Label Text="EBM receipt not available"
                           FontSize="12"
                           TextColor="#F59E0B"
                           HorizontalOptions="Center"/>

                    <BoxView HeightRequest="1" BackgroundColor="#E2E8F0" Margin="0,5"/>

                    <Label Text="{Binding Sale.TransactionDate, StringFormat='Date: {0:yyyy-MM-dd HH:mm}'}"
                           FontSize="14"
                           TextColor="#64748B"
                           HorizontalOptions="Center"/>

                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="8">
                        <Label Grid.Row="0" Grid.Column="0" Text="Fuel:" FontSize="14" TextColor="#64748B"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding Sale.FuelType}" FontSize="14" FontAttributes="Bold" TextColor="#1E293B"/>

                        <Label Grid.Row="1" Grid.Column="0" Text="Liters:" FontSize="14" TextColor="#64748B"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding Sale.Liters, StringFormat='{0:F2} L'}" FontSize="14" TextColor="#1E293B"/>

                        <Label Grid.Row="2" Grid.Column="0" Text="Price/L:" FontSize="14" TextColor="#64748B"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding Sale.PricePerLiter, StringFormat='RWF {0:N0}'}" FontSize="14" TextColor="#64748B"/>

                        <Label Grid.Row="3" Grid.Column="0" Text="Subtotal:" FontSize="14" TextColor="#64748B"/>
                        <Label Grid.Row="3" Grid.Column="1" Text="{Binding Sale.Subtotal, StringFormat='RWF {0:N0}'}" FontSize="14" FontAttributes="Bold" TextColor="#1E293B"/>

                        <Label Grid.Row="4" Grid.Column="0" Text="VAT (18%):" FontSize="14" TextColor="#64748B"/>
                        <Label Grid.Row="4" Grid.Column="1" Text="{Binding Sale.VAT, StringFormat='RWF {0:N0}'}" FontSize="14" TextColor="#64748B"/>

                        <Label Grid.Row="5" Grid.Column="0" Text="Total:" FontSize="16" FontAttributes="Bold" TextColor="#1E3A8A"/>
                        <Label Grid.Row="5" Grid.Column="1" Text="{Binding Sale.Total, StringFormat='RWF {0:N0}'}" FontSize="16" FontAttributes="Bold" TextColor="#10B981"/>
                    </Grid>

                    <BoxView HeightRequest="1" BackgroundColor="#E2E8F0" Margin="0,5"/>

                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="Payment:" FontSize="14" TextColor="#64748B"/>
                        <Label Text="{Binding Sale.PaymentMethod}" FontSize="14" FontAttributes="Bold" TextColor="#3B82F6"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
        </ScrollView>

        <!-- Action Buttons -->
        <VerticalStackLayout Grid.Row="2" Padding="15,5,15,20" Spacing="10">

            <!-- Open in Browser (only when EBM receipt available) -->
            <Button Text="Open Full Receipt"
                    Command="{Binding OpenEBMReceiptCommand}"
                    BackgroundColor="#3B82F6"
                    TextColor="White"
                    FontSize="15"
                    HeightRequest="50"
                    CornerRadius="10"
                    IsVisible="{Binding HasEBMReceipt}"/>

            <Button Text="New Sale"
                    Command="{Binding NewSaleCommand}"
                    BackgroundColor="#10B981"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="55"
                    CornerRadius="10"/>

            <Button Text="Dashboard"
                    Command="{Binding GoToDashboardCommand}"
                    BackgroundColor="#64748B"
                    TextColor="White"
                    FontSize="16"
                    HeightRequest="50"
                    CornerRadius="10"/>
        </VerticalStackLayout>

    </Grid>

</ContentPage>
